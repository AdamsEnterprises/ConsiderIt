!!! Strict
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head{ :profile => "http://gmpg.org/xfn/1" }
    - if @option
      %title #{get_page_name} - #{@option.reference} – #{APP_CONFIG['meta']['title']}
    - else
      %title #{get_page_name} – #{APP_CONFIG['meta']['title']}
    %link{ :href => "/favicon.ico", :rel => "icon", :type => "image/vnd.microsoft.icon" }
    %meta{ :content => 'text/html; charset=UTF-8', "http-equiv" => "Content-Type" }
    %meta{ :name => 'viewport', :content => 'width = device-width' }
    = stylesheet_link_tag 'mobile'
    = javascript_include_tag :defaults
    = javascript_include_tag "mobile", :"data-path" => "/javscripts/"
    = csrf_meta_tag
    /[if IE]
      = javascript_include_tag "svg", :"data-path" => "/javascripts/"
      %meta{ :content => "true", :name => "svg.render.forceflash"}
      = stylesheet_link_tag 'ie'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie7'
    /[if lt IE 7]
      = stylesheet_link_tag 'ie6'
  %body

    -# if @option
    -#  %p #{session[@option.id]}

    .init_title

      - if @option
        %h1.page_title #{get_page_name}
        %h2.locality #{@option.domain_short}: #{@option.designator} - #{@option.short_name}
      - elsif get_page_name == 'Homepage'
        %h1.page_title #{APP_CONFIG['meta']['title']}
        - if user_signed_in?
          %p Hello, #{current_user.name}!
      - else
        %h1.page_title #{get_page_name}
    - if flash[:notice]
      %p.flash_message #{flash[:notice]}
    - if flash[:error]
      %p.flash_error #{flash[:error]}

    = yield

    %div{ :id => 'footer' }
      - if user_signed_in?
        = "Logged in as #{current_user.name}."
        = link_to "Logout", ""
      - else
        = "You are not logged in."
        = link_to "Login", mobile_user_path

    :javascript
      $j(document).ready(function(){
        ConsiderIt.init();     
      });
