!!! Strict
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head{ :profile => "http://gmpg.org/xfn/1" }
    - if @option
      %title #{get_page_name} - #{@option.reference} – #{APP_CONFIG['meta']['title']}
    - else
      %title #{get_page_name} – #{APP_CONFIG['meta']['title']}
    %link{ :href => "/favicon.ico", :rel => "icon", :type => "image/vnd.microsoft.icon" }
    %meta{ :content => 'text/html; charset=UTF-8', "http-equiv" => "Content-Type" }
    %meta{ :name => 'viewport', :content => 'width = device-width' }
    = stylesheet_link_tag 'mobile'
    = javascript_include_tag "mobile"
    = include_javascripts :workspace

    :javascript
      $j = jQuery.noConflict();

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '#{GOOGLE_ANALYTICS}']);
      _gaq.push(['_trackPageview']);

  %body

    -# if session[:mobile]
    -#  %p #{session[:mobile]}

    .init_title

      - if @option
        %h1.page_title #{get_page_name}
        %h2.locality #{@option.domain_short}: #{@option.short_name}
      - elsif get_page_name == 'Homepage'
        %h1.page_title #{APP_CONFIG['meta']['title']}
        %div.call #{APP_CONFIG['home']['call']}
      - else
        %h1.page_title #{get_page_name}

    - if flash[:notice]
      %p.flash_message #{flash[:notice]}
    - if flash[:error]
      %p.flash_error #{flash[:error]}

    = yield

    -# don't show footer on the TOU path because redirecting from login or
    -# clicking the TOU link on the TOU page itself will mess up the
    -# previous button
    - if !is_login_page && request.request_uri != mobile_tou_path
      %div{ :id => 'footer' }
        %p
          - if user_signed_in?
            = "Logged in as #{current_user.name}."
            = link_to 'Log Out', destroy_user_session_path, :class => 'logout'
          - else
            = "You are not logged in."
            = link_to "Log in", mobile_user_path
            = "or"
            = link_to("sign up.", new_mobile_user_pledge_path)
        %p
          - if defined?(APP_CONFIG['footer']['disclaimer'])
            = APP_CONFIG['footer']['disclaimer']
          = link_to 'Terms of Use', mobile_tou_path

    :javascript
      $j(document).ready(function(){
        ConsiderIt.init();     
      });
