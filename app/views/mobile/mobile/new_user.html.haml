%p.fineprint.login
  = "Already have an account?"
  = link_to("Log in!", mobile_user_path)

%p
  = link_to("Why should I join " + APP_CONFIG['meta']['title'] + "?", new_mobile_user_why_path)

-#%div#third_party
-#
  %h3
    Use your account from:
  %ul
  - ['facebook', 'twitter', 'google', 'yahoo'].each do |provider|
    %li
      %a{ :onclick => "javascript:login('#{new_user_session_path(:third_party=>true, :provider=>"#{provider}")}',500, 500)" }
        = image_tag("#{provider}.png")

  %p.fineprint We won't post to your news feed or share your info.

%div#lvg_account
  -#%h3 Or, sign up the old-fashioned way!

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  
    %ul#signup_field_list
      %li.name_field
        %div
          %label{:for => "user_name"}
            = "First and last name:"
        %div
          = f.text_field :name
        %div
          = link_to "(why should I provide my name?)", "",
            {:onClick => "alert('You stand behind your opinions, donâ€™t you? When possible, we believe it is best to avoid anonymity.'); return false;"}

      %li.email_field
        %div
          %label{:for => "user_email"}
            = "Email:"
        %div
          = f.text_field :email, :autocapitalize => 'off'
        %div
          = link_to "(why provide my email?)", "",
            {:onClick => "alert('Your email is never shown to other users and we promise not to share your information with third parties. Your email is only used to confirm your account and to send notifications of relevant events, like someone replying to a comment you left.'); return false;"}

      %li.password_field
        %div
          %label{:for => "user_password"} Password:
        %div
          = f.password_field :password, :autocapitalize => 'off'

    %p.acknowledgment
      = "By signing up, you acknowledge that you have read, agree to and were bored by the "
      = link_to("Terms of Use.", mobile_tou_path)

    %div.submit_footer
      = f.submit "Sign up", :name => "button[signup]"
    %div
      = f.submit "Cancel", :name => "button[cancel]"
