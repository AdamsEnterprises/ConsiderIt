= form_for :navigate, :url => mobile_navigate_option_path do |f|
  - @option.format_description.each do |paragraph|
    %p #{paragraph}
  .option_desc_links
    %div
      = f.submit "View Long Description", :name => 'button[description]'
    %div
      = f.submit "View Fiscal Impact Statement", :name => 'button[fiscal_impact]'
  = render :partial => "mobile/partials/nav", :locals => { :id => "nav_bottom", :navigation => @navigation, :include_header => true, :form => f }

