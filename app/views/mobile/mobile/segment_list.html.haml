= form_for :navigate, :url => mobile_navigate_path do |f|
  %ul.link_list
    - if @point_type == 'pro'
      %li
        = link_to "See my pros", mobile_option_list_points_path(:option_id => @option.id, :type => :pro)
      %li
        = link_to "See cons for #{@stance_name}", mobile_option_segment_list_path(:option_id => @option.id, :stance_bucket => @stance_bucket, :point_type => :con)
    - else
      %li
        = link_to "See my cons", mobile_option_list_points_path(:option_id => @option.id, :type => :con)
      %li 
        = link_to "See pros for #{@stance_name}", mobile_option_segment_list_path(:option_id => @option.id, :stance_bucket => @stance_bucket, :point_type => :pro)
  - if @points.any?
    = render :partial => "mobile/partials/point_list", :locals => { :points => @points, :included_points => @included_points, :form => f }
  - else
    %strong No #{@point_type.pluralize} listed by #{@stance_name}
  = render :partial => "mobile/partials/nav", :locals => { :id => "nav_bottom", :navigation => @navigation, :include_header => true, :form => f }

