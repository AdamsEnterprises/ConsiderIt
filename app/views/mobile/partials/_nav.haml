-if (!defined? id)
  - id = "nav_bottom"
%div.nav{ :id => id }
  - if ((!defined? skip_header) || !skip_header)
    %h2 Navigation
  %ul.link_list

    -# if next_path is defined AND is not nil (the latter can happen from
    -# option description page)
    - if (defined? next_path) && next_path
      %li
        = link_to("Next: " + get_page_name(next_path), next_path)

    - if (defined? prev_path) && prev_path
      %li
        = link_to("Previous: " + get_page_name(prev_path), prev_path)
    - elsif (defined? use_back) && use_back
      %li
        - if (defined? no_back_title) && no_back_title
          - link_text = "Previous"
        - else
          - link_text = "Previous: " + get_page_name(referring_path)
        = link_to(link_text, "", {:class => "back" })

    - if (!defined? skip_description) || !skip_description
      %li
        - @option_name = APP_CONFIG['decisions']['name']['full']
        = link_to("#{@option.reference} Description", show_mobile_option_path)

    %li
      = link_to("Home", mobile_home_path)
